<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\Observe" table="observe" repository-class="App\Repository\ObserveRepository">
        <id name="id" type="uuid"/>
        <field name="author"/>
        <one-to-one field="ref" target-entity="App\Entity\TaxRef" mapped-by="CD_NOM"/>
        <field name="desc" type="text"/>
        <field name="latitude"/>
        <field name="longitude"/>
        <field name="img"/>
        <many-to-one field="validator" target-entity="App\Entity\User" inversed-by="validatedObserve"/>
        <one-to-many field="upvote" target-entity="App\Entity\User" mapped-by="id"/>
    </entity>
</doctrine-mapping>