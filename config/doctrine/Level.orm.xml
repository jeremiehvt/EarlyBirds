<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\Level" table="level" repository-class="App\Repository\LevelRepository">
        <id name="id" type="uuid"/>
        <field name="name" length="150"/>
        <field name="desc" type="text" nullable="true"/>
        <field name="img" length="150" nullable="true"/>
        <one-to-many field="user" target-entity="App\Entity\User" mapped-by="level"/>
    </entity>
</doctrine-mapping>