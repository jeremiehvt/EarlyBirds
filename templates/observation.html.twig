{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
          integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
          crossorigin=""/>
{% endblock %}

{% block title %}
observation
{% endblock %}

{% block body %}
    <div class="row">
        <div id="form" class="col s12 m4">
            <div class="row" id="blue">
                {{ form_start(form) }}

                <div class="input-field col s12">
                    {{ form_row((form.ref)) }}
                </div>

                <div class="input-field col s12">
                    {{ form_row(form.description) }}
                </div>

                <div class="input-field col s12">
                    {{ form_row(form.latitude) }}
                </div>

                <div class="input-field col s12">
                    {{ form_row(form.longitude) }}
                </div>

                {% if img is defined %}
                    <div id="picture">
                        <img id="birdImg" src="
                            {% if img matches '/^https?:/' %}
                            {{ img | replace({'sz=50':'sz=256'}) }}
                            {% else %}{{ img }}
                            {% endif %}
                         "
                             alt=""/>
                    </div>
                {% endif %}

                <div class="input-field col s12">
                    {{ form_row(form.img) }}
                </div>

                <div class="input-field col s12">
                    <button type="submit" formnovalidate value="Submit without validation">
                        Soumettre
                    </button>
                </div>

                {{ form_end(form) }}

            </div>
        </div>
        <div id="mapid" class="col s12 m8"></div>
    </div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
            integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
            crossorigin=""></script>
    <script src="{{ asset('js/observe.js') }}"></script>
{% endblock %}
