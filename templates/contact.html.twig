{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href=" {{ asset('css/contact.css') }}">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col m12 l12 s12">
        {{ form_start(form) }}
            <div class="row">
                <div class="col m2 l2 s2">
                    <p id="slogan">
                        Nos amis les oiseaux
                    </p>
                </div>
                <div class="col m9 l9 ">
                    <div class="row" id="form">
                        <div class="input-field col l6 s6 m6 offset-l4" id="paraph">
                            Vous avez une question ? une suggestion ?
                            ou vous êtes naturaliste et souhaitez rejoindre l’équipe ?
                            N'hésitez pas à nous contacter, nous nous ferons un plaisir
                            de vous répondre dès que nous aurons posé nos jumelles !
                        </div>
                        <div class="input-field col l6 s6 m6 offset-l4">
                            <span class="label"></span>
                            {{ form_row(form.subject) }}
                            <span class="form_errors">{{ form_errors(form.subject) }}</span>
                        </div>
                        <div class="input-field col l6 s6 m6 offset-l4">
                            <span class="label"></span>
                            {{ form_row(form.author) }}
                            <span class="form_errors">{{ form_errors(form.author) }}</span>
                        </div>
                        <div class="input-field col l6 s6 m6 offset-l4">
                            <span class="label"></span>
                            {{ form_row(form.mail) }}
                            <span class="form_errors">{{ form_errors(form.mail) }}</span>
                        </div>
                        <div class="input-field col l6 s6 m6 offset-l4">
                            <span class="label"></span>
                            {{ form_row(form.message) }}
                            <span class="form_errors">{{ form_errors(form.message) }}</span>
                        </div>
                        <div class="input-field col l6 s6 m6 offset-l4" id="divSubBtn">
                            <button id="submitBtn" class="btn waves-effect waves-light col s4 m4 l4
                            right"
                                    type="submit">
                                Envoyer
                            </button>
                        </div>

                        <div class="col l6 s6 m6 offset-l4">
                            <label>
                                {{ form_widget(form.response, {'attr': {'class': 'filled-in'}}) }}
                                <span>J'autorise NAO à utiliser les informations saisies
                                    dans ce formulaire pour m'adresser une réponse
                                    personnalisée, par email.
                                </span>
                            </label>
                        </div>

                        <div class="col l6 s6 m6 offset-l4">
                            <label>
                                {{ form_widget(form.marketing, {'attr': {'class': 'filled-in'}}) }}
                                <span>J'accepte de recevoir de NAO des offres
                                        marketing personnalisées. Nous vous invitons à consulter
                                        notre politique de confidentialité.
                                    </span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
