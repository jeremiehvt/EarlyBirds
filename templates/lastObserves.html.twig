{% extends 'base.html.twig' %}

{% block title %}NAO - Dernières observations{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
          integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
          crossorigin=""/>
{% endblock %}

{% block body %}
    <div class="row" style="margin-bottom: 61px">
        <div class="col s1">
            
        </div>
        <div class="col s10 center-block" style="background-image: url({{ asset('/img/boris-smokrovic-131485-unsplash.jpg') }}); background-size: 100% 100%; height: 369px">
            
        </div>
        <div class="col s1">
            
        </div>
    </div>

    <div class="row">
        <div class="col s12">

            <div class="row" style="margin-bottom: 106px">
                <div id="divautocomplete" class="col s8 offset-s2" style="background: #FFFFFF; box-shadow: inset 0px 4px 4px rgba(0, 0, 0, 0.25); border-radius: 20px;">
                    <div class="row" style="margin-bottom: 0">
                        <div class="input-field col s12">
                            <input data-url="{{ path('json_getvalidateobservestaxrefnames') }}" type="text" id="autocomplete-input" class="autocomplete">
                            <img id="ajaxLoader" src="{{ asset('img/ajaxLoader/ajaxloader.gif') }}">
                            <label for="autocomplete-input">Saisissez le nom latin ou vernaculaire de l’oiseau recherché</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" style="padding-left: 40px; padding-right: 40px">

                {% for observe in observes %}

                <div id="observeTule" class="observe col s12 l5 xl3" style="margin-right: 4%; margin-left: 4%; margin-bottom: 45px">
                    <div class="card">
                        <div class="card-image">
                            <img src="{{ observe.img }}">
                            <span {% if observe.ref %}data-lbnom="{{ observe.ref.lbNom }}"{% endif %} class="left-align truncate card-title black-text" style="padding-left: 18px; padding-bottom: 13px; line-height: 24px"><b>{% if observe.ref.nomVern is defined %}{{ observe.ref.nomVern }}{% elseif observe.ref.lbNom is defined %}{{ observe.ref.lbNom }}{% else %}Non identifié{% endif %}</b></span>
                            <a class="btn-floating halfway-fab waves-effect waves-light orange darken-1"><i class="material-icons">add</i></a>
                        </div>
                        <div class="card-content row" style="padding-bottom: 9px; padding-top: 9px">
                                <div class="col s6 left-align">
                                    <div class="row" style="margin-bottom: 0">
                                        <span class="truncate" style="font-size: 12px">Observé le {{ observe.createdAt|localizeddate('long', 'none') }}</span>
                                    </div>
                                    <div class="row" style="margin-bottom: 0">
                                        <span style="font-size: 12px">{% if observe.author.nickname is defined %}{{ observe.author.nickname }}{% else %}{{ observe.author.email }}{% endif %}</span>
                                    </div>
                                </div>
                                <div class="col s4 left-align" style="padding-right: 0px; padding-top: 15px;">
                                    <span class="js-like-observe-count" style="position: relative; bottom: 8px; font-size: 12px">{{ observe.upvoter.count }}</span>
                                    <a class="js-like-observe" href="{{ path('toggle_observe_heart', {id: observe.id}) }}">
                                        <i id="heart" data-url="{{ path('get_observe_like_status') }}" data-id="{{ observe.id }}" class="material-icons" style="color: #EB5757">favorite_border</i>
                                        <img id="ajaxLoading" src="{{ asset('img/ajaxLoader/ajaxloader.gif') }}" style="display: none; margin-bottom: 4px;">
                                    </a>
                                    <a href="#">
                                        <i class="material-icons" style="color: #2D9CDB">share</i>
                                    </a>
                                </div>
                        </div>

                    </div>
                </div>

                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
            integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
            crossorigin="">
    </script>
    <script src="{{ asset('/js/last_observe.js') }}"></script>
    <script>
        $(document).ready(function() {
            // Flash message display loop
            {% for flash in app.flashes('lastObserve') %}
            $(function () {
                M.toast({html: '<span>{{ flash }}</span>'});
            });
            {% endfor %}
        });
    </script>
{% endblock %}

