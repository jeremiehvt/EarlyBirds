{% extends 'base.html.twig' %}

{% block title %}NAO - Derni√®res observations{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
          integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
          crossorigin=""/>
{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">textsms</i>
                        <input data-url="{{ path('json_getvalidateobservestaxrefnames') }}" type="text" id="autocomplete-input" class="autocomplete">
                        <img id="ajaxLoader" src="{{ asset('img/ajaxLoader/ajaxloader.gif') }}">
                        <label for="autocomplete-input">Nom Latin ou Vernaculaire</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">

            {% for observe in observes %}

            <div class="observe col s12 m6 l4">
                <div class="card">
                    <div class="card-image">
                        <img src="{{ observe.img }}">
                        <span data-lbnom="{{ observe.ref.lbNom }}" class="card-title">{% if observe.ref.nomVern is defined %}{{ observe.ref.nomVern }}{% else %}{{ observe.ref.lbNom }}{% endif %}</span>
                    </div>
                    <div class="card-action" style="padding-bottom: 0">
                        <div class="row">
                            <div class="col s9 m6 l6 xl6">
                                <div class="row">
                                    <span style="font-size: small">le {{ observe.createdAt|localizeddate('full', 'none') }}</span>
                                </div>
                                <div class="row">
                                    <span style="font-size: small">{% if observe.author.nickname is defined %}{{ observe.author.nickname }}{% else %}{{ observe.author.email }}{% endif %}</span>
                                </div>
                            </div>
                            <div class="col s3 m6 l6 xl6">
                                <div class="row">
                                    <div class="col s12" style="width: max-content">
                                        <span class="js-like-observe-count" style="position: relative; bottom: 7px">{{ observe.upvoter.count }}</span>
                                        <a class="js-like-observe" href="{{ path('toggle_observe_heart', {id: observe.id}) }}">
                                            <i id="heart" data-url="{{ path('get_observe_like_status') }}" data-id="{{ observe.id }}" class="material-icons">favorite_border</i>
                                        </a>
                                        <a href="#">
                                            <i class="material-icons">share</i>
                                        </a>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>

            {% endfor %}

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"
            integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw=="
            crossorigin="">
    </script>
    <script src="{{ asset('/js/last_observe.js') }}"></script>
    <script>
        $(document).ready(function() {
            // Flash message display loop
            {% for flash in app.flashes('lastObserve') %}
            $(function () {
                M.toast({html: '<span>{{ flash }}</span>'});
            });
            {% endfor %}
        });
    </script>
{% endblock %}

