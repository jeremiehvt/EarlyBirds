{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
{% endblock %}

{% block body %}
    {% if error %}
        <div class="row" id="alert">
            <div class="offset-s2 col s8">
                <div class="card red darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Erreur</span>
                        <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    </div>
                    <div class="card-action">
                        <a href="#" onclick="dismiss()">Fermer</a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

<div class="row" id="loginPanel">
    <div class="card-panel cyan lighten-5 hoverable col s8 offset-s2">
        <div class="row" style="padding-top: 6%; padding-bottom: 3%">

            <div class="row">
                <div class="col s10 offset-s1 center">
                    <a class="waves-effect waves-light btn" href="{{ path('social_google') }}"><i class="fab fa-google-plus-g"> </i> Google</a>
                    <a class="waves-effect waves-light btn" href="{{ path('social_facebook') }}"><i class="fab fa-facebook-f"> </i> Facebook</a>
                </div>
            </div>

            <div class="row">
                <div class="col s10 offset-s1 center">

    {{ form_start(login_form, {'action': path('security_login')}) }}
    {{ form_row(login_form) }}
    <button class="btn waves-effect waves-light" type="submit" name="action">login
        <i class="material-icons right">send</i>
    </button>
    {{ form_end(login_form) }}

                </div>
            </div>

            <div class="row">
                <div class="col s10 offset-s1 center">

    {{ form_start(register_form) }}
    {{ form_row(register_form) }}
    <button class="btn waves-effect waves-light" type="submit" name="action">register
        <i class="material-icons right">send</i>
    </button>
    {{ form_end(register_form) }}

                </div>
            </div>

            <div class="row">
                <div class="col s10 offset-s1 center">
                    <a class="waves-effect red lighten-2 waves-light btn" href="/logout"><i class="material-icons right"> close</i> Loggout
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

{% endblock %}

{% block title %}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        M.updateTextFields();
        function dismiss() {
            let alert = document.getElementById("alert");
            alert.remove();
        }

    </script>
{% endblock %}
